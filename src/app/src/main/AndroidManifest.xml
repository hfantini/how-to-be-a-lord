<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="smarttrap.android.app.lordfree">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="smarttrap.android.app.lordfree.view.ViewLoader"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="smarttrap.android.app.lordfree.view.ViewMenu"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <activity
            android:name="smarttrap.android.app.lordfree.view.ViewApp"
            android:configChanges="orientation"
            android:screenOrientation="landscape"></activity>

        <activity
            android:name="smarttrap.android.app.lordfree.view.ViewRemoveADS"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>

        <activity android:name="smarttrap.android.app.lordfree.view.ViewCredits"
                  android:configChanges="orientation"
                  android:screenOrientation="portrait"></activity>

        <service
            android:name="smarttrap.android.app.lordfree.service.MusicPlayerService"
            android:label="MusicPlayerService">
        </service>

        <service
            android:name="smarttrap.android.app.lordfree.service.MusicPlayerRain"
            android:label="MusicPlayerService">
        </service>

        <service
            android:name="smarttrap.android.app.lordfree.service.MusicPlayerFire"
            android:label="MusicPlayerService">
        </service>

    </application>

</manifest>